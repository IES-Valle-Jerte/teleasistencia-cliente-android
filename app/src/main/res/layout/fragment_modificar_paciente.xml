<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".ui.fragments.paciente.ModificarPacienteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_modificar_paciente"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerTipoModalidadPacienteModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/spinnerTipoModalidadPacienteHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <Spinner
                android:id="@+id/spinnerTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/spinnerTerminalHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <Spinner
                android:id="@+id/spinnerPersona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/spinnerPersonaHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <EditText
                android:id="@+id/editTextTieneUCR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/tieneUCRHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <EditText
                android:id="@+id/editTextNumeroExpediente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/numeroExpedienteHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textViewErrorNumeroExpedientePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textViewNumeroExpedienteObligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewErrorNumeroSeguridadSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textViewNumeroSeguridadSocialObligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextNumeroSeguridadSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/numeroSeguridadSocialHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textViewErrorPrestacionOtrosServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textViewPrestacionOtrosServiciosObligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextPrestacionOtrosServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/editTextPrestacionOtrosServiciosHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <EditText
                android:id="@+id/editTextObservacionesMedicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/observacionesMedicasHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textViewErrorObservacionesMedicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textViewObservacionesMedicasObligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextInteresesActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/interesesActivadesHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textViewErrorInteresesActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textViewInteresesActividadesObligatorios"
                android:textColor="@color/black"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center|top"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnModificarPaciente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/guardar"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center|top"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVolverPacienteModificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/volver" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>