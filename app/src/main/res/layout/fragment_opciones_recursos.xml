<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".ui.fragments.recurso_comunitario.FragmentInsertarRecursoComunitario">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_container_opciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_auto_start="false">

        <include layout="@layout/recursos_placeholder" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_DetallesRecursoComunitario"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewErrorNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_bordes_textviews"
            android:gravity="center"
            android:minHeight="25dp"
            android:text="@string/error_nombreVacio"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/editTextNombre"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextNombre"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba3"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba2"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textViewErrorTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_bordes_textviews"
            android:gravity="center"
            android:minHeight="25dp"
            android:text="@string/error_telefonoVacio"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/editTextPhoneTelefono"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha" />

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefono"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextPhoneTelefono"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toBottomOf="@+id/editTextNombre" />

        <EditText
            android:id="@+id/editTextPhoneTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="phone"
            android:padding="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba4"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba3"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textViewTipoRecursoComunitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipoRecursoComunitario"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextTipoRecursoComunitario"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhoneTelefono" />

        <EditText
            android:id="@+id/editTextTipoRecursoComunitario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba5"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba4"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/spinnerTipoRecursoComunitario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba5"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba4" />

        <TextView
            android:id="@+id/textViewErrorPedirLocalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_bordes_textviews"
            android:gravity="center"
            android:minHeight="25dp"
            android:text="@string/error_localidadVacio"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/editTextLocalidad"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha" />

        <TextView
            android:id="@+id/textViewLocalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/localidad"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextLocalidad"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toBottomOf="@+id/editTextTipoRecursoComunitario" />

        <EditText
            android:id="@+id/editTextLocalidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba7"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba5"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textViewErrorProvincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_bordes_textviews"
            android:gravity="center"
            android:minHeight="25dp"
            android:text="@string/error_provinciaVacio"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/editTextProvincia"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha" />

        <TextView
            android:id="@+id/textViewProvincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/provincia"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextProvincia"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toBottomOf="@+id/editTextLocalidad" />

        <EditText
            android:id="@+id/editTextProvincia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba8"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba7"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textViewErrorDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_bordes_textviews"
            android:gravity="center"
            android:minHeight="25dp"
            android:text="@string/error_direccionVacio"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/editTextDireccion"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha" />

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextDireccion"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toBottomOf="@+id/editTextProvincia" />

        <EditText
            android:id="@+id/editTextDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba9"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba8"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textViewErrorCodigoPostal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_bordes_textviews"
            android:gravity="center"
            android:minHeight="25dp"
            android:text="@string/error_codigoPostalVacio"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddressCodigoPostal"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha" />

        <TextView
            android:id="@+id/textViewCodigoPostal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codigoPostal"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddressCodigoPostal"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toBottomOf="@+id/editTextDireccion" />

        <EditText
            android:id="@+id/editTextTextPostalAddressCodigoPostal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint=""
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guidelineArriba10"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba9"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="37dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.19" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.31" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.43" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.79" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineArriba10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.91" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineIzquierda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDerecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/guardar"
            android:textColor="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineCentro"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba10"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDerecha"
            app:layout_constraintStart_toStartOf="@+id/guidelineCentro"
            app:layout_constraintTop_toTopOf="@+id/guidelineArriba10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>