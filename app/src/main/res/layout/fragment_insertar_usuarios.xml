<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".ui.fragments.usuarios.InsertarUsuariosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_insertar_usuarios"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_nombreUsuario_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/nombreUsuario"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textView_error_nombreUsuario_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textview_nombre_usuario_obligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText_password_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textView_error_password_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textview_password_obligatoria"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/nombre"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textView_error_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textview_nombre_obligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText_apellidos_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/apellidos"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textView_error_apellidos_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textview_apellidos_obligatorios"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText_email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzquierda"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/textView_error_email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_bordes_textviews"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/textview_email_obligatorio"
                android:textColor="@color/black"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_grupos_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:minHeight="45dp"
                android:padding="10dp"
                android:spinnerMode="dialog" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_guardar_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/btn_guardar"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_volver_tipoSituacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/btn_volver" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>