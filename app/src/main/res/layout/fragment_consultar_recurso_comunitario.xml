            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/nombre"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombreRecursoComunitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:text="@string/nombre"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="439dp"
                android:background="#B3AEB3" />

            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="65dp"
                android:text="@string/telefono"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telefonoRecursoComunitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="85dp"
                android:text="@string/telefono"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="379dp"
                android:background="#B3AEB3" />

            <TextView
                android:id="@+id/tipoRecursoComunitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="125dp"
                android:text="@string/tipoRecursoComunitario"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipoRecursoComunitarioRecursoComunitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="145dp"
                android:text="@string/tipoRecursoComunitario"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="181dp"
                android:layout_marginBottom="318dp"
                android:background="#B3AEB3" />

            <TextView
                android:id="@+id/localidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="186dp"
                android:text="@string/localidad"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/localidadRecursoComunitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="206dp"
