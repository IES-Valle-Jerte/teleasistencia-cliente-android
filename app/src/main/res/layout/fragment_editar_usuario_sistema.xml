<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".ui.fragments.usuarios_sistema.EditarUsuarioSistemaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- ID y URL (campos inmutables) -->
        <TextView
            android:id="@+id/tvId"
            android:text="@string/campoVacio"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvUrl"
            android:text="@string/campoVacio"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvId" />

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/ivFotoPerfil"
            android:src="@drawable/default_user"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUrl" />
        <ImageButton
            android:id="@+id/btnCargarFoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu_camera"
            android:background="@drawable/imagebutton_circular"
            android:elevation="5dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/ivFotoPerfil"
            app:layout_constraintBottom_toBottomOf="@+id/ivFotoPerfil"
            app:layout_constraintStart_toStartOf="@+id/ivFotoPerfil"
            app:layout_constraintEnd_toEndOf="@+id/ivFotoPerfil" />

        <!-- Login/Username -->
        <TextView
            android:id="@+id/titleUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalles_usuario_sistema_tittle_username"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFotoPerfil" />
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleUsername" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/titleNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalles_usuario_sistema_tittle_nombre"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtUsername" />
        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleNombre" />

        <!-- Apellidos -->
        <TextView
            android:id="@+id/titleApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalles_usuario_sistema_tittle_apellidos"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtNombre" />
        <EditText
            android:id="@+id/edtApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleApellidos" />

        <!-- Email -->
        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalles_usuario_sistema_tittle_email"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtApellidos" />
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleEmail" />

        <!-- Database (solo si isSuperUser) -->
        <TextView
            android:id="@+id/titleDatabase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalles_usuario_sistema_tittle_database"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtEmail" />
        <Spinner
            android:id="@+id/spinEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:minHeight="45dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleDatabase"/>

        <!-- Cambiar Contraseña -->
        <!-- Nueva Contraseña -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="@string/modificar_perfil_tvNuevaPass"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNuevaPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:hint="@string/modificar_perfil_tvNuevaPass"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <!-- Repetir Nueva Contraseña -->
        <EditText
            android:id="@+id/edtRepetirNuevaPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:hint="@string/modificar_perfil_tvRepetirNuevaPass"
            android:inputType="textPassword"
            android:textSize="18sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>